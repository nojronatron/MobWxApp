<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobWxUI.Templates.WeatherCard"
             xmlns:local="clr-namespace:MobWxUI"
             x:DataType="local:Templates.WeatherCard"
             >

    <VerticalStackLayout VerticalOptions="Center">

        <Border Stroke="Gray"
                StrokeThickness="2"
                Background="Transparent"
                Padding="2"
                HorizontalOptions="FillAndExpand">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8,8,8,8" />
            </Border.StrokeShape>

            <VerticalStackLayout VerticalOptions="Center"
                                 Spacing="2">
                
                <!-- Card Title like Today, Tonight, Tuesday, Tuesday Night, etc -->
                <Label Text="{Binding Name}"
                        Style="{StaticResource LocationName}"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="Fill" />

                <!-- short forecast description -->
                <Label Text="{Binding ShortForecast}"
                        Style="{StaticResource SubHeadline}"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="Fill" />

                <HorizontalStackLayout VerticalOptions="Center"
                                       HorizontalOptions="Start"
                                       Margin="4"
                                       Spacing="2">

                    <!-- Predominant weather icon -->
                    <Image Source="wxicon_placeholder_86x86.png"
                            Aspect="AspectFit"
                            WidthRequest="86"
                            VerticalOptions="Center"
                            HorizontalOptions="Fill" />


                    <VerticalStackLayout VerticalOptions="Center"
                                        Margin="4">
                        <!-- Forecast Data for this frame -->
                        <Label Text="{Binding Temp}"
                            Style="{StaticResource ForecastItem}"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill" />
                        <Label Text="{Binding Dewpoint}"
                            Style="{StaticResource ForecastItem}"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill" />
                        <Label Text="{Binding ProbabilityOfPrecipitation}"
                            Style="{StaticResource ForecastItem}"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill" />
                        <Label Text="{Binding RelativeHumidity}"
                            Style="{StaticResource ForecastItem}"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill" />
                        <Label Text="{Binding Winds}"
                            Style="{StaticResource ForecastItem}"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill" />
                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Border>

    </VerticalStackLayout>

</ContentView>
