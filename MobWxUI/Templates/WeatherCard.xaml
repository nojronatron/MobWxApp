<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobWxUI.Templates.WeatherCard"
             xmlns:local="clr-namespace:MobWxUI"
             x:DataType="local:Templates.WeatherCard"
             >

    <HorizontalStackLayout >
        <VerticalStackLayout>
        <!-- Card Title like Today, Tonight, Tuesday, Tuesday Night, etc -->
            <Label Grid.Row="0"
                Grid.Column="0"
                Text="{Binding Name}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
            <!-- Predominant weather icon -->
            <Image Grid.Row="1"
                Grid.Column="0"
                Source="{Binding Icon}"
                Aspect="AspectFit"
                WidthRequest="86"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
            <Label Grid.Row="4"
                Grid.Column="0"
                Text="{Binding ShortForecast}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    
        <VerticalStackLayout>
            <!-- Forecast Data for this frame -->
            <Label Grid.Row="0"
                Grid.Column="2"
                Text="{Binding Temp}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
            <Label Grid.Row="1"
                Grid.Column="2"
                Text="{Binding Dewpoint}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
            <Label Grid.Row="2"
                Grid.Column="2"
                Text="{Binding ProbabilityOfPrecipitation}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
            <Label Grid.Row="3"
                Grid.Column="2"
                Text="{Binding RelativeHumidity}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
            <Label Grid.Row="4"
                Grid.Column="2"
                Text="{Binding Winds}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
        </VerticalStackLayout>

    </HorizontalStackLayout>

</ContentView>
