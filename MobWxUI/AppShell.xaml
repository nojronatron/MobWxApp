<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobWxUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobWxUI"
    xmlns:views="clr-namespace:MobWxUI.Views"
    Shell.FlyoutBehavior="Disabled"
    >

    <TabBar>
        <Tab Title="Location">
            <ShellContent Title="Set Your Location"
                          ContentTemplate="{DataTemplate views:SetLocationPageView}"
                          />
        </Tab>

        <Tab Title="Conditions">
            <ShellContent Title="Detailed Conditions"
                          ContentTemplate="{DataTemplate views:DetailedConditionsView}"
                          />
        </Tab>

        <!--<Tab Title="Forecast">
            <ShellContent Title="Forecast"
                          ContentTemplate="{DataTemplate views:CurrentForecastPageView}"
                          />
        </Tab>-->
            
        <Tab Title="About">
            <ShellContent Title="About"
                          ContentTemplate="{DataTemplate views:AboutPageView}"
                          />
        </Tab>
    </TabBar>

</Shell>
