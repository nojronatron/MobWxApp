<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobWxUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobWxUI"
    xmlns:views="clr-namespace:MobWxUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MobWxUI">

    
    <FlyoutItem Title="Main"
                Icon="mobwx_logo_v3_bw_20x20.png" >
        <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Forecast"
                Icon="mobwx_tabbar_location_dark.png" >
        <ShellContent ContentTemplate="{DataTemplate views:ForecastView}" />
    </FlyoutItem>
    <FlyoutItem Title="About"
                Icon="mobwx_tabbar_about.png">
        <ShellContent ContentTemplate="{DataTemplate views:AboutPageView}" />
    </FlyoutItem>

</Shell>
